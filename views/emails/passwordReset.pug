extends baseEmail


block content
    p Hi #{firstName},
    p forgot your password ? submit your new password to :#{url}
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') reset your password
    p If you didnt forget your password,please ignore this email !